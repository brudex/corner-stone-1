    <script>
      $(document).ready(() => {
        $.get("/api/donations/donationsByMonth", function (data, status) {
          const labels = [
            "January",
            "February",
            "March",
            "April",
            "May",
            "June",
            "July",
            "August",
            "September",
            "October",
            "November",
            "December",
          ];
          const chartData = {
            labels: labels,
            datasets: [
              {
                label: "Donations per month",
                backgroundColor: "rgb(255, 99, 132)",
                borderColor: "rgb(255, 99, 132)",
                data,
              },
            ],
          };

          const config = {
            type: "line",
            data: chartData,
            options: {},
          };
          var myChart = new Chart(document.getElementById("myChart"), config);
        });
      });
    </script>
