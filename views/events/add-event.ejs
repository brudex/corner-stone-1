<!-- Page Content -->

<div class="container page__container page-section">
  <div class="row mb-32pt">
    <div class="col-lg-4">
      <div class="page-separator">
        <div class="page-separator__text">Add event</div>
      </div>
      <p class="card-subtitle text-70 mb-16pt mb-lg-0">
        Enter event title, date, time, description and upload the event banner
      </p>
    </div>
    <div class="col-lg-8 d-flex align-items-center">
      <div class="flex" style="max-width: 100%">
        <form action="/events/add" method="post" enctype="multipart/form-data">
          <div class="form-group">
            <label class="form-label" for="eventname">Event Title*:</label>
            <input
              type="text"
              class="form-control"
              id="eventname"
              name="title"
              value="<% if(typeof values !== 'undefined') {%><%=values.title%><%}%>"
              placeholder="Enter event title"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="eventVenue">Event Venue*</label>
            <input
              type="text"
              class="form-control"
              id="eventVenue"
              name="eventVenue"
              value="<% if(typeof values !== 'undefined') {%><%=values.address%><%}%>"
              placeholder="Enter event venue"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="eventDate">Event Date</label>
            <input
              id="eventDate"
              type="hidden"
              class="form-control flatpickr-input"
              data-toggle="flatpickr"
              name="eventDate"
              value="<% if(typeof values !== 'undefined') {%><%= new Date(values.eventDate).toDateString()%><%}%>"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="eventTime">Event Time</label>
            <input
              id="eventTime"
              type="hidden"
              name="eventTime"
              class="form-control flatpickr-input"
              placeholder="Flatpickr time example"
              data-toggle="flatpickr"
              data-flatpickr-enable-time="true"
              data-flatpickr-no-calendar="true"
              data-flatpickr-alt-format="H:i"
              data-flatpickr-date-format="H:i"
              value="08:00"
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="description">Description*:</label>
            <textarea
              id="description"
              name="description"
              placeholder="Enter Description"
              class="form-control"
              rows="3"
            >
<% if(typeof values !== 'undefined') {%><%=values.description%><%}%></textarea
            >
          </div>
          <div class="form-group m-0">
            <label class="form-label" for="file">Event Image*</label>
            <div class="custom-file">
              <input
                type="file"
                id="file"
                class="custom-file-input"
                name="event-image"
                required
              />
              <label for="file" class="custom-file-label"
                >Select event image</label
              >
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
