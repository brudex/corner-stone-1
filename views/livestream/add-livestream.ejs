<!-- Page Content -->

<div class="container page__container page-section">
  <div class="row mb-32pt">
    <div class="col-lg-4">
      <div class="page-separator">
        <div class="page-separator__text">Add livestream</div>
      </div>
      <p class="card-subtitle text-70 mb-16pt mb-lg-0">
        Enter livestream title and stream urlto add a livestream
      </p>
    </div>
    <div class="col-lg-8 d-flex align-items-center">
      <div class="flex" style="max-width: 100%">
        <form
          action="/livestream/add"
          method="POST"
          enctype="multipart/form-data"
        >
          <div class="form-group">
            <label class="form-label" for="title">title*:</label>
            <input
              type="text"
              class="form-control"
              id="title"
              name="title"
              value="<% if(typeof values !== 'undefined') {%><%=values.title%><%}%>"
              placeholder="Enter livestream title"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="title">Live stream url*:</label>
            <input
              type="text"
              class="form-control"
              id="url"
              name="contentData"
              value="<% if(typeof values !== 'undefined') {%><%=values.url%><%}%>"
              placeholder="Enter livestream url"
              required
            />
          </div>

          <div class="form-group m-0">
            <label class="form-label" for="livestream-thumbnail"
              >Live stream Thumbnail*</label
            >
            <div class="custom-file">
              <input
                type="file"
                id="livestream-thumbnail"
                class="custom-file-input"
                name="livestream-thumbnail"
                required
              />
              <label for="file" class="custom-file-label"
                >Select live stream thumbnail</label
              >
            </div>
          </div>
          <div id="msg" style="visibility: collapse">
            <div class="alert alert-info" id="alert" role="alert">
              <div class="d-flex flex-wrap align-items-start">
                <div class="mr-8pt">
                  <i class="material-icons">info</i>
                </div>
                <div class="flex" style="min-width: 180px">
                  <small id="alert-msg" class="text-black-100"> </small>
                </div>
              </div>
            </div>
          </div>
          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
