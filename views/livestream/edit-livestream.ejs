<div class="container page__container page-section">
  <div class="row mb-32pt">
    <div class="col-lg-4">
      <div class="page-separator">
        <div class="page-separator__text">Edit livestream</div>
      </div>
      <!-- <p class="card-subtitle text-70 mb-16pt mb-lg-0">
        Enter livestream name, GPS coordinates and select an image to represent the
        livestream
      </p> -->
      <img
        src="/uploads/<%=values.audioThumbnail %>"
        height="250"
        width="100%"
      />
      <form
        action="/livestream/edit/image/<%=values.id %>"
        method="post"
        enctype="multipart/form-data"
        id="image-form"
      >
        <input
          onchange="document.getElementById('image-form').submit()"
          type="file"
          id="image"
          name="livestream-thumbnail"
          required
          hidden
        />
      </form>
      <button
        type="button"
        class="btn btn-primary mt-3"
        onclick="document.getElementById('image').click();"
      >
        Change Image
      </button>
    </div>
    <div class="col-lg-8 d-flex align-items-center">
      <div class="flex" style="max-width: 100%">
        <form action="/livestream/edit/<%=values.id %>" method="post">
          <div class="form-group">
            <label class="form-label" for="livestreamname">title*:</label>
            <input
              type="text"
              class="form-control"
              id="livestreamname"
              name="title"
              value="<% if(typeof values !== 'undefined') {%><%=values.title%><%}%>"
              placeholder="Enter livestream title"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="address">LIve stream url*</label>
            <input
              type="text"
              class="form-control"
              id="address"
              name="contentData"
              value="<% if(typeof values !== 'undefined') {%><%=values.contentData%><%}%>"
              placeholder="Enter livestream url"
              required
            />
          </div>
          <button type="submit" class="btn btn-primary mt-3">Save</button>
        </form>
      </div>
    </div>
  </div>
</div>
