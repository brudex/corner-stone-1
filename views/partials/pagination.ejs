<% if (page <= pages) {%>
<div class="card-footer p-8pt">
  <ul class="pagination justify-content-start pagination-xsm m-0">
    <li class="page-item <%=page ===1 && 'disabled' %>">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=page - 1 %>"
        aria-label="Previous"
      >
        <span aria-hidden="true" class="material-icons">chevron_left</span>
        <span>Prev</span>
      </a>
    </li>
    <li class="page-item <%=page ===1 && 'disabled' %>">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=1 %>"
        aria-label="Page 1"
      >
        <span>1</span>
      </a>
    </li>

    <% if (adjacentLeft[0] > 2) {%>
    <li class="page-item">
      <a class="page-link">
        <span>...</span>
      </a>
    </li>
    <%}%> <% adjacentLeft.forEach(adjPage => {%>
    <li class="page-item">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=adjPage %>"
        aria-label="Page <%=adjPage %>"
      >
        <span><%=adjPage %></span>
      </a>
    </li>
    <%})%> <%if (page !== 1 && page !== pages) {%>
    <li class="page-item disabled">
      <a class="page-link" aria-label="Page <%=page %>">
        <span><%=page %></span>
      </a>
    </li>
    <%}%> <% adjacentRight.forEach(adjPage => {%>
    <li class="page-item">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=adjPage %>"
        aria-label="Page <%=adjPage %>"
      >
        <span><%=adjPage %></span>
      </a>
    </li>
    <%})%> <% if (adjacentRight[adjacentRight.length - 1] < pages-1) {%>
    <li class="page-item">
      <a class="page-link">
        <span>...</span>
      </a>
    </li>
    <%}%>

    <li class="page-item <%=page === pages && 'disabled' %>">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=pages %>"
        aria-label="Page <%=pages %>"
      >
        <span><%=pages %></span>
      </a>
    </li>
    <li class="page-item <%=page ===pages && 'disabled' %>">
      <a
        class="page-link"
        href="<%=pathname%>?page=<%=page + 1 %>"
        aria-label="Next"
      >
        <span>Next</span>
        <span aria-hidden="true" class="material-icons">chevron_right</span>
      </a>
    </li>
  </ul>
</div>

<%}%>
