<div class="col-md-5 p-0 mx-auto">
    <div class="card card-lg overlay--primary-dodger-blue ">
      <div class="card-body d-flex flex-column">
        <% if (locals.messages.error) { %>
          <div class="alert alert-soft-accent alert-dismissible fade show" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">Ã—</span>
            </button>
            <div class="d-flex flex-wrap align-items-start">
                <div class="mr-8pt">
                    <i class="material-icons">warning</i>
                </div>
                <div class="flex" style="min-width: 180px">
                    <small class="text-black-100">
                        <strong>Error - </strong> <%= locals.messages.error %>
                    </small>
                </div>
            </div>
        </div>
          <% } %>
      <img class="align-self-center" src="/images/logo/logo_text.JPG" alt="logo" height="50" width="40%" />
      <form action="/login" method="POST">
        <div class="form-group">
        <label class="form-label" for="email">Email:</label>
        <input
          id="email"
          name="email"
          type="email"
          class="form-control"
          required
          placeholder="Ente your email address"
          />
        </div>
        <div class="form-group">
          <label class="form-label" for="password">Password:</label>
          <input
          id="password"
          name="password"
          type="password"
          class="form-control"
          required
          placeholder="Enter your password"
          />
        <p class="text-right mt-3">
          <a href="/forgotpassword" class="small"
            >Forgot your password?</a
            >
          </p>
        </div>
        <div class="text-center">
        <button type="submit" class="btn btn-primary btn-block">Login</button>
      </form>
    </div>
  </div>
</div>