<!-- Page Content -->

<div class="container page__container page-section">
  <div class="row mb-32pt">
    <div class="col-lg-4">
      <div class="page-separator">
        <div class="page-separator__text">Add Devotional</div>
      </div>
      <p class="card-subtitle text-70 mb-16pt mb-lg-0">
        Fill all fields specified below to add a new devotional.
      </p>
    </div>
    <div class="col-lg-8 d-flex align-items-center">
      <div class="flex" style="max-width: 100%">
        <form action="/daily-devotionals/add" method="post">
          <div class="form-group">
            <label class="form-label" for="dateToShow">Date to show</label>
            <input
              id="dateToShow"
              type="hidden"
              class="form-control flatpickr-input"
              data-toggle="flatpickr"
              name="dateToShow"
              value="<% if(typeof values !== 'undefined') {%><%=values.dateToShow%><%}%>"
              required
            />
          </div>
          <div class="form-group">
            <label class="form-label" for="devotionalContent">Message*:</label>
            <textarea
              id="devotionalContent"
              name="devotionalContent"
              placeholder="Enter Message"
              class="form-control"
              rows="3"
            >
<% if(typeof values !== 'undefined') {%><%=values.devotionalContent%><%}%></textarea
            >
          </div>
          <div class="form-group">
            <div class="custom-control custom-checkbox">
              <input
                id="customCheck01"
                type="checkbox"
                class="custom-control-input"
                name="isDefault"
                checked=""
              />
              <label for="customCheck01" class="custom-control-label"
                >Set as default</label
              >
            </div>
          </div>

          <button type="submit" class="btn btn-primary mt-3">Submit</button>
        </form>
      </div>
    </div>
  </div>
</div>
